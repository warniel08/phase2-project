<div class="container">
  <% if @user %>
    <h5>hello, <strong><%= @user.username %></strong></h5>
  <% else %>
    <h5>hello</h5>
  <% end %>
  <h3>check out some posts</h3>

  <div class="col-md-6">
    <% @posts.each do |post| %>
    <hr>
    <h4><a href="/posts/<%= post.id %>"><%= post.title %></a></h4>
    <p>created on: <small><%= post.created_at.strftime("%F") %></small></p>
    <% end %>
    <hr>
    <a class="btn btn-success" href="/posts/new">add a new post</a>
  </div>

  <div class="col-md-6">
    <hr>
    <h5>Current temperature of Seattle, WA</h5>
    <img src="<%= @weather.weather_img %>" height="100" width="100" alt="weather-img">
    <p>current temperature: <%= @weather.temperature %></p>
    <hr>
  </div>
</div>
